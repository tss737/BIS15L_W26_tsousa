library("tidyverse")
options(scipen = 999) #disable scientific notation
ggplot(data=msleep,
mapping=aes(x=brainwt, y=bodywt))+
scale_y_log10()+
scale_x_log10()+
geom_point()+
geom_smooth(method=lm)+
labs(title="Brain Weight (kg) vs Body Weight (kg)",
x="Brain Weight (kg)",
y="Body Weight (kg)")
